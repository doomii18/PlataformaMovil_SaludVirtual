<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F8F9FA">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Icono circular a la izquierda -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@android:color/white"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp"
            android:contentDescription="Avatar"
            android:clipToOutline="true" />

        <!-- Datos del estudiante -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvnombrecompletopaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/tvsexopaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvedadpacientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvalergiaspacientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvnombrecompletotutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvsexotutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvedadtutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvocupaciontutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


